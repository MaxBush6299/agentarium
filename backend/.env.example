# Backend Application Configuration

# Application Settings
ENVIRONMENT=development
LOCAL_DEV_MODE=true
LOG_LEVEL=DEBUG

# API Configuration
FRONTEND_URL=http://localhost:3000

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_REGION=eastus

# Cosmos DB Configuration
COSMOS_ENDPOINT=https://your-cosmosdb.documents.azure.com:443/
COSMOS_DATABASE_NAME=agents-db
COSMOS_KEY=your-primary-key-for-local-testing
# For development with local emulator:
# COSMOS_ENDPOINT=https://localhost:8081
# COSMOS_KEY=C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QB0c/Db2xCLFJxXvdGP3MqFH3w==

# Key Vault Configuration
KEYVAULT_URL=https://your-keyvault.vault.azure.net/

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-key

# Model Configuration
DEFAULT_MODEL=gpt-4
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048

# Entra ID (Azure AD) Configuration
ENTRA_ID_CLIENT_ID=your-client-id
ENTRA_ID_CLIENT_SECRET=your-client-secret  # Only needed for client credentials flow
API_SCOPE=https://localhost/api/.default

# Application Insights Configuration
APPINSIGHTS_INSTRUMENTATION_KEY=your-instrumentation-key
APPINSIGHTS_CONNECTION_STRING=your-connection-string

# Token Budget (for cost control)
TOKEN_BUDGET_PER_USER_PER_DAY=100000
MAX_RESPONSE_TOKENS=2048

# Feature Flags
ENABLE_TELEMETRY_SAMPLING=true
ENABLE_A2A_PROTOCOL=true
ENABLE_TOOL_CACHING=true
